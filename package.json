    "@angular/compiler-cli": "^19.0.1",
    "@angular/language-service": "^19.0.1",
    "@types/jasmine": "~5.1.5",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "copyfiles": "^2.4.1",
